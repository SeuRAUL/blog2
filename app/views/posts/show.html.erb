<p id="notice"><%= notice %></p>

<div class="container">
	<p>
	  <b>Title:</b>
	  <%= @post.title %>
	</p>

	<p>
	  <b>Content:</b>
	  <%= @post.content %>
	</p>

	<p>
	  <b>Name:</b>
	  <%= @post.name %>
	</p>
</div>

<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<hr>
<div class="container">
	<div class="offset3 span6">

		<div class="offset2">
			<h2>Comments</h2>
		</div>
		<%= render @post.comments %>
		 
		<h2>Add a comment:</h2>
		<%= render "comments/form" %>
		 
		<br />
	</div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
